@{
    ViewData["Title"] = "Home";
}

<div class="text-center mt-4">
    <h1 class="display-5">MiniShop</h1>
    <p class="lead">
        Mini e-commerce aplikacija za pregled kataloga knjiga, prikaz detalja proizvoda i upravljanje listom želja.
    </p>

    <div class="mt-3">
        <a class="btn btn-primary" asp-controller="Shop" asp-action="Index">Open Shop</a>
        @if (User.Identity?.IsAuthenticated == true)
        {
            <a class="btn btn-outline-secondary ms-2" asp-controller="Wishlist" asp-action="Index">My Wishlist</a>
        }
    </div>
</div>

