@model MiniShop.Models.Product

<h2>@Model.Name</h2>

@if (!string.IsNullOrEmpty(Model.ImagePath))
{
    <img src="@Model.ImagePath" style="max-height:300px;" />
}

<p class="mt-3">@Html.Raw(Model.DescriptionHtml)</p>
<p><strong>Price:</strong> @Model.Price €</p>
<p><strong>Category:</strong> @Model.Category?.Name</p>
